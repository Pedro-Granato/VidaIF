<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@drawable/bg_contact_card"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_card_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_card_subtitle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/eventContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_card_content" />

    <TextView
        android:id="@+id/eventBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_badge"
        android:paddingHorizontal="@dimen/badge_padding_horizontal"
        android:paddingVertical="@dimen/badge_padding_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_badge"
        android:textStyle="bold" />
</LinearLayout>